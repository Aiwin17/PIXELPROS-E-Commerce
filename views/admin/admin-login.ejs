                <div class="mb-4">
                    <label for="username" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" value="" id="email" placeholder="Email" required>
                </div>
                <div class="mb-4">
                    <label for="" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" value="" id="password" placeholder="Password" required>
                    <!-- <div class="d-flex justify-content-between">
                        <a class="forgot text-light ps-5 pe-4" href="#">forgot password ?</a>
                    </div> -->
                </div>
                <div class="text-center">
                    <button type="submit" class="loginBtn border mb-4 text-white  fs-5 fw-bold">Login</button>
                </div>
            </form>
        </div>
    </div>
