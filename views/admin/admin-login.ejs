<section class="d-flex w-100 flex-column justify-content-center align-items-center">
    <div class="container-fluid p-0 rounded-4  col-9 col-md-6 d-flex justify-content-center sec-1 position-relative"
        style="box-shadow: 0 0 4px 4px rgba(0, 0, 0, 0.126);">
        <div class="w-100 position-absolute"><a href="#" style="text-decoration: none;">
                <h4 class="text-white mt-4 fw-bold text-center">ADMIN LOGIN</h4>
            </a>
        </div>
        <div class="row w-75 align-items-center d-flex justify-content-center">
            <form class="mt-4 p-0  col-12 col-md-10 text-white" action="/admin/login" method="post">
            <!-- {{#if msg}}
            <span class="text-danger bg-white rounded-3">Invalid Email or Password</span>
