                                    <a href="/admin/block-user/<%=user._id%>" class="btn btn-sm btn-danger rounded font-sm mt-15"onclick="return confirm('Are You sure you want to block <%= user.username %>?')">Block</a>
                                <% } %>
                            </td>
                        </tr>
                        <% } )%>
