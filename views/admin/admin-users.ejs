                      <a href="#" class="btn btn-sm btn-danger rounded font-sm mt-15 blockUser" data-id="<%=user._id%>">Block</a>
                      <% } %>
                    </td>
                  </tr>
                  <% } )%>
                </tbody>
              </table>
