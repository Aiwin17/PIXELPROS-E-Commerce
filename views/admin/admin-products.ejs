                </div> -->
            </header> <!-- card-header end// -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover display" id="example">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th class="text-end"> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                            <tr>
                                <td width="40%">
                                    <a href="#" class="itemside">
                                        <div class="left">
                                            <img src="/images/<%=product.image[0]%>" class="img-sm img-avatar square-image" alt="Imagepic" type="file" name="image">
                                        </div>
                                        <!-- <div class="info pl-3">
                                            <h6 class="mb-0 title">Category</h6>
                                        </div> -->
                                    </a>
                                </td>
                                <td name="productname"><%= product.name %></td>
                                <td name="description"><%=product.description%></td>
                                <td name="price"><%= product.price %></td>
                                <td><span class="badge rounded-pill alert-success">Active</span></td>
                                <td class="text-end">
                                    <a href="/admin/edit-products/<%=product._id%>" class="btn btn-sm btn-brand rounded font-sm mt-15">Edit</a>
                                    <a onclick="deleteProducts('<%=product._id%>');return false" class="btn btn-sm btn-danger rounded font-sm mt-15">Delete</a>

                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="pagination-area mt-15 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    <li class="page-item active"><a class="page-link" href="#">01</a></li>
                    <li class="page-item"><a class="page-link" href="#">02</a></li>
