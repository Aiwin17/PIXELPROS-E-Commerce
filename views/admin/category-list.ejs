                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col" > Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                        <% if (!category.Deleted) { %>
                            <tr>
                                <td><b><%= category.name %></b></td>
                                <td>
                                    <a href="/admin/edit-category/<%= category._id %>" id="editCategory" class="btn btn-info rounded font-sm">Edit</a>
                                    <a class="btn btn-danger rounded font-sm" href="/admin/remove-category/<%= category._id %>">Unlist</a>
                                </td>
                            </tr>
                        <% } %>
                        <% }) %>
                    </tbody>
                </table>
            </div> <!-- table-responsive //end -->
        </div> <!-- card-body end// -->
    </div> <!-- card end// -->
