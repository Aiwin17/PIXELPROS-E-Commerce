<%- include('../partials/user-header')%>
  <style>
    .main-container {
      background-color: #f8f7f7;
      height: 100%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .sub-container1 {
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
      height: 60%;
      width: 70%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .username {
      font-weight: bold;
      font-size: 20px;
      margin-top: 20px;
    }

    .fa-check {
      font-size: 70px;
      color: rgb(36, 243, 36);
      border: 5px solid rgb(144, 242, 144);
      border-radius: 50%;
      padding: 30px;
    }

    .button {
      color: white;
      margin-top: 20px;
      padding: 5px;
      background-color: rgb(36, 243, 36);
      border-radius: 8px;
    }

    .shipping-message {
      margin-top: 20px;
      width: 25%;
      text-align: center;
    }

    .order-confirmed {
      margin-top: 20px;
      font-size: 30px;
      font-weight: bold;
    }
  </style>
  <div class="main-container">
    <div class="sub-container1">
      <div class="icon">
        <i class="fa-solid fa-check"></i>
      </div>
      <div class="username">
        Hey <%=user.username%>
      </div>
      <div class="order-confirmed">
        Your Order is Confirmed
      </div>
      <div class="shipping-message">
        We will send you shipping confirmation email as soon as order ships.
      </div>
      <div class="button">
        <a href="/orders" style="color: white; padding:8px;">Check Details</a>
      </div>
    </div>
  </div>
  <%- include('../partials/user-footer')%>