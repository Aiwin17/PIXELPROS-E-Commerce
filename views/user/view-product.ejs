<%- include('../partials/user-header') %>
    <div class="p-t-60 p-b-20 wrap-modal1">
        <div class="overlay-modal1"></div>
        <div class="container">
            <div class="bg0 how-pos3-parent">
                <div class="row">
                    <div class="col-md-6 col-lg-7 p-b-30">
                        <div class="p-l-25 p-r-30 p-lr-0-lg">
                            <div class="wrap-slick3 flex-sb flex-w">
                                <div class="wrap-slick3-dots"></div>
                                <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                                <div class="slick3 gallery-lb">
                                    <div class="item-slick3" data-thumb="/images/<%= product[0].image[0]%>">
                                        <div class="wrap-pic-w pos-relative">
                                            <img src="/images/<%= product[0].image[0]%>" alt="IMG-PRODUCT">

                                            <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                                href="/images/<%= product[0].image[0]%>">
                                                <i class="fa fa-expand"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="item-slick3" data-thumb="/images/<%= product[0].image[1]%>">
                                        <div class="wrap-pic-w pos-relative">
                                            <img src="/images/<%= product[0].image[1]%>" alt="IMG-PRODUCT">

                                            <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                                href="/images/<%= product[0].image[1]%>">
                                                <i class="fa fa-expand"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="item-slick3" data-thumb="/images/<%= product[0].image[2]%>">
                                        <div class="wrap-pic-w pos-relative">
                                            <img src="/images/<%= product[0].image[2]%>" alt="IMG-PRODUCT">

                                            <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                                href="/images/<%= product[0].image[2]%>">
                                                <i class="fa fa-expand"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="item-slick3" data-thumb="/images/<%= product[0].image[3]%>">
                                        <div class="wrap-pic-w pos-relative">
                                            <img src="/images/<%= product[0].image[3]%>" alt="IMG-PRODUCT">

                                            <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                                href="/images/<%= product[0].image[3]%>">
                                                <i class="fa fa-expand"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-5 p-b-30">
                        <div class="p-r-50 p-t-5 p-lr-0-lg">
                            <span style="font-weight: bold; font-size: 30px;"
                                class="mtext-105 cl2 js-name-detail p-b-14">
                                <%= product[0].name %>
                            </span>
                            <p style="color: green; font-size: 20px; margin-top: 10px;"
                                class="mtext-105 cl2 js-name-detail p-b-14">
                                IN STOCK
                            </p>
                            <p style="font-size: 12px;" class="mtext-105 cl2 js-name-detail p-b-14">
                                Category: <span style="font-weight: bold;">
                                    <%= product[0].category %>
                                </span>
                            </p>
                            <span style="color: red;" class="mtext-106 cl2">
                                â‚¹<%= product[0].price %>
                            </span>
                            <p class="stext-102 cl3 p-t-23">
                                <%= product[0].description %>
                            </p>
                            <!--  -->
                            <div class="p-t-33">
                                <div class="flex-w flex-r-m p-b-10">
                                    <div class="size-204 flex-w flex-m respon6-next">
                                        <% if (user) { %>
                                            <% if (product[0].stock!==0) { %>
                                                <button style="color: white;" onclick="addToCart('<%= product[0]._id %>')"
                                                    class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                                    Add to cart </button>
                                                <% } else { %>
                                                    <button style="color: white;"
                                                        class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                                        Out of Stock</button>
                                                    <%} %>
                                                        <% } else { %>
                                                            <a style="color: white;" href="/login"
                                                                class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                                                Add to cart </a>
                                                            <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/user-footer') %>