<%- include('../partials/user-header')%>
<section class="confirmation_part padding_top">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
        </div>
        <% user.address.forEach(users => { %>
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>Address</h4>
            <ul>
              <li>
                <p>Name</p><span id="name">: <%= users.name %> </span>
              </li>
              <li>
                <p>Number</p><span id="number">: <%= users.number %> </span>
              </li>
              <li>
                <p>Address</p><span id="address">: <%= users.address %> </span>
              </li>
              <li>
                <p>Country</p><span id="country">: <%= users.country %> </span>
              </li>
              <li>
                <p>District</p><span id="district">: <%= users.district %> </span>
              </li>
              <li>
                <p>Pincode</p><span id="pincode">: <%= users.pincode %></span>
              </li>
              <li>
                <p><a href="/edit-address">Edit</a></p>
              </li>
            </ul>
          </div>
        </div>
        <% }) %>
        <h6 class="pt-4 pl-3">Do you want to add new address <a href="/address">Click here</a> </h6>
    </div>
</section>
<%- include('../partials/user-footer')%>


