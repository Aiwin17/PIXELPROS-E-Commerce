    function applyCoupen(userId) {
      let couponCode = document.getElementById('applyCoupon').value
      let totalAmount = document.getElementById('totalAmount').innerHTML
      $.ajax({
        url: '/apply-coupon',
        data: {
          couponCode,
          userId,
          total
        },
        method: 'post',
        success: (response) => {
          if (response.status == false) {
            Swal.fire(
