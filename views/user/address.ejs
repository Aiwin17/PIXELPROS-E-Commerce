<%- include('../partials/user-header')%>
<!--================Add Address Area =================-->
  <section class="checkout_area padding_top">
    <div class="container">
      <div class="billing_details">
        <div class="row">
          <div class="col-lg-8">
            <h3>Add Your Details</h3>
            <form class="row contact_form" action="/address" method="post">
              <div class="col-md-6 form-group p_star">
                <input type="text" class="form-control" id="first" name="name"  placeholder="Full name"/>
              </div>
              <div class="col-md-6 form-group p_star">
                <input type="text" class="form-control" name="number"  placeholder="Mobile number"/>
              </div>
              <div class="col-md-12 form-group p_star">
                <input type="text" class="form-control" id="add1" name="address"  placeholder="Address"/>
              </div>
              <div class="col-md-12 form-group p_star">
                <input type="text" class="form-control" name="country"  placeholder="Country"/>
              </div>
              <div class="col-md-12 form-group p_star">
                <input type="text" class="form-control" name="district"  placeholder="District"/>
              </div>
              <div class="col-md-12 form-group p_star">
                <input type="text" class="form-control" name="pincode"  placeholder="PIN code"/>
              </div>
              <input type="text" name="userId" value="<%= user._id %>" hidden>
              <button type="submit" class="btn_3">Save</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('../partials/user-footer')%>
