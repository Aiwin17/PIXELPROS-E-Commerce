<script>
  function orderStatus(order, orderStatus) {
    $.ajax({
      url: "/change-status-order",
      data: {
        orderId: order,
        status: orderStatus,
      },
      method: "post",
      success: (response) => {
        if (response.status) {
          location.reload();
        }
      },
    });
  }
</script>
