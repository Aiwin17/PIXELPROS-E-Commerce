<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PIXELPROS</title>
  <link rel="icon" type="image/png" href="images/icons/App-Logo.jpg" />
  <link rel="stylesheet" href="css/signup.css">
</head>
<body>
  <div class="App-logo">
    <img class="logo" src="images/icons/App-Logo.jpg" alt="App-Logo">
    <span class="App-name">PIXELPROS</span>
  </div>
  <div class="main-container">
    <div class="login-container">
      <div class="login-img-container">
        <img class="login-image" src="images/Login-Image.png" alt="">
      </div>
      <div class="login-form-container">
        <div class="login-text">
          <span>Sign Up</span>
        </div>
        <form action="/signup" method="post" onsubmit="return validateForm()">
          <div class="form-container">
            <div class="form">
              <div class="details">
                <input type="text" id="username" class="inputs" placeholder="Username" required name="username"
                  onkeyup="validateUserName(this)">
                <span style="color: red;" id="username-error"></span>
              </div>
              <div class="details">
                <input type="email" id="email" required class="inputs" name="email" placeholder="Email"
                  onkeyup="validateEmail(this)">
                <span style="color: red;" id="email-error"></span>
              </div>
              <div class="details">
                <input type="text" id="mobile-number" required class="inputs" name="mobileno" placeholder="MobileNo"
                  onkeyup="validateMobileNumber(this)">
                <span style="color: red;" id="mobilenumber-error"></span>
              </div>
              <div class="details">
                <input type="password" id="password" required class="inputs" name="password" placeholder="Password"
                  onkeyup="validatePassword(this)">
                <span style="color: red;" id="password-error"></span>
              </div>
              <div class="details">
                <input type="password" id="confirm-password" required class="inputs"
                  onkeyup="validateConfirmPassword(this)" placeholder="Confirm">
                <span style="color: red;" id="confirmpassword-error"></span>
                <input type="number" value="0" name="wallet" hidden>
              </div>
              <div class="details">
                <a class="forgot-password" href="/otp-changePassword">Forgot Password?</a>
              </div>
              <div class="details">
                <button class="login-button" type="submit">CREATE ACCOUNT</button>
              </div>
              <div class="signup-account">
                <span class="question">Already have an account? </span>
                <a class="new-account" href="/login">Login</a>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
<script>
  function validateForm() {
    const usernameInput = document.getElementById('username');
    const emailInput = document.getElementById('email');
    const mobileNumberInput = document.getElementById('mobile-number');
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirm-password');

    const validatedUsername = validateUserName(usernameInput);
    const validatedEmail = validateEmail(emailInput);
    const validatedMobileNumber = validateMobileNumber(mobileNumberInput);
    const validatedPassword = validatePassword(passwordInput);
    const validatedConfirmPassword = validateConfirmPassword(confirmPasswordInput);

    if (!validatedUsername || !validatedEmail || !validatedMobileNumber || !validatedPassword || !validatedConfirmPassword) {
      return false;
    } else {
      return true;
    }
  }

  function validateUserName(usernameInput) {
    const username = usernameInput.value.trim();
    const usernameError = document.getElementById('username-error');
    const usernameRegex = /^[a-zA-Z0-9_]+( [a-zA-Z0-9_]+)?/;
    if (usernameRegex.test(username)) {
      usernameError.innerHTML = "";
      return true;
    } else if (username === "") {
      usernameError.innerHTML = "Username is required";
      return false;
    } else {
      usernameError.innerHTML = "Invalid username";
      return false;
    }
  }

  function validateEmail(emailInput) {
    const email = emailInput.value.trim();
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const emailError = document.getElementById('email-error');
    if (emailRegex.test(email)) {
      emailError.innerHTML = "";
      return true;
    } else if (email === "") {
      emailError.innerHTML = "Email is required";
      return false;
    } else {
      emailError.innerHTML = "Invalid Email";
      return false;
    }
  }

  function validateMobileNumber(mobileNumberInput) {
    const mobileError = document.getElementById('mobilenumber-error');
    const mobileNumber = mobileNumberInput.value.trim();
    const mobileRegex = /^\d{10}$/;
    if (mobileRegex.test(mobileNumber)) {
      mobileError.innerHTML = "";
      return true;
    } else if (mobileNumber === "") {
      mobileError.innerHTML = "Mobile number is required";
      return false;
    } else {
      mobileError.innerHTML = "Invalid Mobile Number";
      return false;
    }
  }

  function validatePassword(passwordInput) {
    const password = passwordInput.value.trim();
    const passwordError = document.getElementById('password-error');
    if (password.length <= 3 || password.length > 15) {
      passwordError.innerHTML = "Password must be between 4 and 15 characters";
      return false;
    } else if (password === "") {
      passwordError.innerHTML = "Password is required";
      return false;
    } else {
      passwordError.innerHTML = "";
      return true;
    }
  }

  function validateConfirmPassword(confirmPasswordInput) {
    const confirmPasswordError = document.getElementById('confirmpassword-error');
    const confirmPassword = confirmPasswordInput.value.trim();
    const password = document.getElementById('password').value.trim();
    if (confirmPassword !== password) {
      confirmPasswordError.innerHTML = "Passwords do not match";
      return false;
    } else if (confirmPassword === "") {
      confirmPasswordError.innerHTML = "Confirm your password";
      return false;
    } else {
      confirmPasswordError.innerHTML = "";
      return true;
    }
  }
</script>
</body>
</html>
