<%- include('../partials/custom-header')%>
<main class="main">
  <div class="page-header breadcrumb-wrap">
      <div class="container">
          <div class="breadcrumb">
          </div>
      </div>
  </div>
  <section class="mt-50 mb-50">
      <div class="container">
          <div class="row">
            <form id="checkout-form">
              <div class="col-lg-6">
                  <div class="toggle_info">
                      <span><i class="fi-rs-label mr-10"></i><span class="text-muted">Have a coupon?</span> <a data-bs-toggle="collapse" class="collapsed" aria-expanded="false">Click here to enter your code</a></span>
                  </div>
                  <div class="panel-collapse collapse coupon_form " id="coupon">
                      <div class="panel-body">
                          <p class="mb-30 font-sm">If you have a coupon code, please apply it below.</p>
                              <div class="form-group">
                                  <input class="coupon-input" type="text" id='applyCoupon' name="coupon" placeholder="Enter Coupon Code...">
                              </div>
                              <div class="form-group">
                                  <a onclick="applyCoupen('<%= user._id %>')" class="btn  btn-md">Apply Coupon</a>
                              </div>
                              <div>
                                <h5>Coupon List:</h5>
                                <table>
                                  <tbody>
                                    <% coupons.forEach((coupon) => { %>
                                    <tr>
                                      <td><span id="coupon-name" onclick="couponApply(this)"><%= coupon.name %></span></td>
                                    </tr>
                                    <% }) %>
                                  </tbody>
                                </table>
                              </div>  
                      </div>
                  </div>
              </div>
          </div>
          <div class="row">
              <div class="col-12">
                  <div class="divider mt-50 mb-50"></div>
              </div>
          </div>
          <div class="row">
              <div class="col-md-6">
                  <div class="mb-25">
                      <h4>Billing Details</h4>
                  </div>
                  <% if (user?.address) { %>
                    <% (user.address||[]).forEach(users => { %>
                      <% if (!users.deleted) { %>
                        <div class="card my-3 col-md-8">
                          <div class="card-header d-flex">
                            <div class="form-check">
                              <input class="form-check-input" checked value="<%=users._id%>" type="radio" name="address" id="flexRadioDefault1" checked readonly />
                              <label class="form-check-label" for="flexRadioDefault1">
                                <h5 class="mb-0">Billing Address</h5>
                              </label>
                            </div>
                          </div>
                          <div class="card-body">
                            <%= users.name %><br>
                            <%= users.number %><br>
                            <%= users.address %><br>
                            <%= users.country %><br>
                            <%= users.district %><br>
                            <%= users.pincode %>
                            <input type="text" name="userId" value="<%= users._id %>" hidden>
                            <div class="d-flex mt-2">
                              <a href="/edit-address?id=<%= users._id %>" type="button" class="btn btn-primary btn-small" data-toggle="modal" data-target="#editModal" data-whatever="@mdo" <a rel="modal:open" class="btn hover-up btn-small mx-1"><i class="fi-rs-edit"></i></a> ></a>
                  
                              <a onclick="deleteAddress('<%= users._id %>')" style="border-color: red ;" class="mx-1 btn btn-danger hover-up bg-danger btn-small"><i class="fi-rs-trash"></i></a>
                            </div>
                          </div>
                        </div>
                        <% } %>
                    <% }) %>
                      <% } else { %>
                        <a href="/address" class="btn btn-success">Add Address</a>
                      <% } %>                 
              </div>
              <div class="col-md-6">
                  <div class="order_review">
                      <div class="mb-20">
                          <h4>Your Orders</h4>
                      </div>
                      <div class="table-responsive order_table text-center">
                          <table class="table">
                              <thead>
                                  <tr>
                                      <th colspan="2">Product</th>
                                      <th>Total</th>
                                  </tr>
                              </thead>
                              <tbody>
                                <% placedProducts.forEach(products => { %>
                                  <tr>
                                      <td class="image product-thumbnail"><img src="/images/<%= products.image[0] %>" alt="#"></td>
                                      <td>
                                          <h5><a href="shop-product-full.html"><%= products.name %></a></h5>
                                           <!-- <span class="product-qty">x 2</span> -->
                                      </td>
                                      <td><%= products.price %></td>
                                  </tr>
                                  <% }) %>
                                  <!-- <tr>
                                      <th>SubTotal</th>
                                      <td class="product-subtotal" colspan="2">$280.00</td>
                                  </tr>
                                  <tr>
                                      <th>Shipping</th>
                                      <td colspan="2"><em>Free Shipping</em></td>
                                  </tr> -->
                                  <tr>
                                      <th>Total</th>
                                      <td colspan="2" class="product-subtotal"><span name="total" class="font-xl text-brand fw-900" id='totalAmount'><%= Total %></span></td>
                                  </tr>
                                  <tr>
                                    <th>Wallet</th>
                                    <td colspan="2" class="product-subtotal"><span class="font-xl text-brand fw-900" id='walletAmount'><%= user.wallet %></span></td>
                                </tr>
                              </tbody>
                          </table>
                      </div>
                      <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                      <div class="payment_method">
                          <div class="mb-25">
                              <h5>Payment</h5>
                          </div>
                          <div class="payment_option">
                              <div class="custome-radio">
                                  <input class="form-check-input" required="" type="radio" name="payment_option" id="exampleRadios3" value="COD" checked="">
                                  <label class="form-check-label" for="exampleRadios3" data-bs-toggle="collapse" data-target="#bankTranfer" aria-controls="bankTranfer">Cash On Delivery</label>
                                  <div class="form-group collapse in">
                                      <p class="text-muted mt-5">There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration. </p>
                                  </div>
                              </div>
                              <div class="custome-radio">
                                  <input class="form-check-input" required="" type="radio" name="payment_option" id="exampleRadios4" value="razorpay" checked="">
                                  <label class="form-check-label" for="exampleRadios4" data-bs-toggle="collapse" data-target="#checkPayment" aria-controls="checkPayment">RazorPay</label>
                                  <div class="form-group collapse in" id="checkPayment">
                                      <p class="text-muted mt-5">Please send your cheque to Store Name, Store Street, Store Town, Store State / County, Store Postcode. </p>
                                  </div>
                              </div>
                              <!-- <div class="custome-checkbox">
                                <input class="form-check-input" type="checkbox" id="exampleCheckbox"  value="wallet">
                                <label class="form-check-label" for="exampleCheckbox" data-bs-toggle="collapse" data-target="#wallet" aria-controls="wallet" style="font-weight: 600; color: #292b2c">Wallet</label>
                                <div class="form-group collapse in" id="wallet">
                                    <p class="text-muted mt-5">Pay via PayPal; you can pay with your credit card if you don't have a PayPal account.</p>
                                </div>
                              </div> -->
                              <% if (parseInt(Total) <= parseInt(user.wallet)) { %>
                                <div class="custome-radio">
                                  <input class="form-check-input" required="" type="radio" name="payment_option" id="exampleRadios5" value="wallet" checked="">
                                  <label class="form-check-label" for="exampleRadios5" data-bs-toggle="collapse" data-target="#paypal" aria-controls="paypal">Wallet</label>
                                  <!-- <div class="form-group collapse in" id="paypal">
                                      <p class="text-muted mt-5">Pay via PayPal; you can pay with your credit card if you don't have a PayPal account.</p>
                                  </div> -->
                                </div>   
                              <% } else { %>
                                <div class="custome-radio">
                                  <input class="form-check-input" required="" type="radio" name="payment_option" id="exampleRadios5" value="wallet" checked="" disabled>
                                  <label class="form-check-label" for="exampleRadios5" data-bs-toggle="collapse" data-target="#paypal" aria-controls="paypal">Wallet</label>
                                  <!-- <div class="form-group collapse in" id="paypal">
                                      <p class="text-muted mt-5">Pay via PayPal; you can pay with your credit card if you don't have a PayPal account.</p>
                                  </div> -->
                                  <span style="color: red"><br>Insufficient Balance in wallet</span>
                                </div>
                              <% } %>
                          </div>
                      </div>
                      <% if (placedProducts.some(product => product.stock <= 0 || user?.address)) { %>
                        <% if (user?.address) { %>
                          <button disabled class="btn btn-fill-out btn-block mt-30">Place Order</button>
                        <% } else if(placedProducts.some(product => product.stock <= 0)) { %>
                        <span style="color: red;">Out of stock</span>
                        <br>
                        <button disabled class="btn btn-fill-out btn-block mt-30">Place Order</button> 
                        <% } else { %>  
                          <button type="submit" id="checkout" class="btn btn-fill-out btn-block mt-30">Place Order</button>
                        <% } %>
                        <% } %>
                  </div>
                </form>
              </div>
          </div>
     </div>
  </section>
</main>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
$("#checkout-form").submit((e)=>{
  let couponCode = document.getElementById('applyCoupon').value
  let userId = document.getElementById('applyCoupon').value
  let discountPrice=parseInt(document.getElementById('totalAmount').innerText)
  let total = document.getElementById('totalAmount').textContent
  total =parseFloat(total.replace('₹', ''));
  walletTotal =parseFloat(walletTotal.replace('₹', ''));
    e.preventDefault()
    $.ajax({
      url:'/place-order',
      method:'post',
      data: $('#checkout-form').serialize() + '&total=' + total + '&wallet=' + walletTotal,
      success:(response)=>{
        if(response.codSuccess){
          Swal.fire(
          'Good job',
          'You order is placed',
          'success'
          )
          setTimeout(()=>{
            location.href='/'
          },1500)
        }else{
          razorpayPayment(response)
        }
      }
    })
  })
  function razorpayPayment(order){
    var options = {
      "key": "rzp_test_OBIWtPdGUChjsm", // Enter the Key ID generated from the Dashboard
      "amount": order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
      "currency": "INR",
      "name": "CamShop", //your business name
      "description": "Test Transaction",
      "image": "https://example.com/your_logo",
      "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
      "handler":function (response){
        verifyPayment(response,order)
      },
      "prefill": {
          "name": "Gaurav Kumar", //your customer's name
          "email": "gaurav.kumar@example.com",
          "contact": "9000090000"
      },
      "notes": {
          "address": "Razorpay Corporate Office"
      },
      "theme": {
          "color": "#3399cc"
      }
  };
  var rzp1 = new Razorpay(options);
  rzp1.on('payment.failed', function (response){
    window.location.href = '/cart'
})
rzp1.on('payment.window.closed', function() {
 
  window.location.href = '/cart'
});
   rzp1.open();
  }

  function verifyPayment(payment,order){
    $.ajax({
      url:'/verify-payment',
      data:{
        payment,
        order
      },
      method:'post',
      success:(response)=>{
        console.log(response.status)
        if(response.status){
          location.href='/'
        }else{
          alert("Payment Failed")
        }
      }
    })
  }
  function applyCoupen(userId){
    let couponCode=document.getElementById('applyCoupon').value
    let totalAmount=document.getElementById('totalAmount').innerHTML
    let total = parseInt(totalAmount)
    $.ajax({
      url:'/apply-coupon',
      data:{
        couponCode,
        userId,
        total
      },
      method:'post',
      success:(response)=>{
        if(response.status == false){
          Swal.fire(
          'Oops',
          'You coupon is Invalid',
          )
        }else{
          Swal.fire(
          'Success',
          'Your coupon is Applied',
          )
           document.getElementById('totalAmount').innerHTML = response.total
        }
      }
    })
  }
  </script>
  <script>
  function deleteAddress(addressId){
    $.ajax({
      url:`/delete-address/${addressId}`,
      method:'post',
      success:(response)=>{
        location.reload()
      }
    })
  }
  var checkbox = document.getElementById('exampleCheckbox');
  let total = document.getElementById('totalAmount').textContent
  total =parseFloat(total.replace('₹', ''));
  let walletTotal = document.getElementById('walletAmount').textContent
  walletTotal =parseFloat(walletTotal.replace('₹', ''));
  checkbox.addEventListener('click', function() {
      if(checkbox.checked){
      let totalPrice = total-walletTotal
      if(total<=walletTotal){
      document.getElementById('totalAmount').textContent='₹0'
    }else{
        document.getElementById('totalAmount').textContent='₹ '+totalPrice
      }
      if(total>=walletTotal){
        document.getElementById('walletAmount').textContent='₹0'
      }else{
        document.getElementById('walletAmount').textContent='₹ ' +Math.abs(totalPrice)
      }
    }else{
      document.getElementById('totalAmount').textContent='₹ '+total
       document.getElementById('walletAmount').textContent='₹ ' +walletTotal
    }
  });
  function couponApply(clickedElement) {
    let couponCode = clickedElement.innerHTML;
    let input = document.querySelector('.coupon-input');
    input.value = couponCode;
  }
  </script>
<%- include('../partials/custom-footer')%>

 
