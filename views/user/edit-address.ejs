<%- include('../partials/user-header')%>
  <section class="checkout_area padding_top">
    <div class="container">
      <div class="billing_details">
        <div class="row">
          <div class="col-lg-8">
            <h3>Edit Details</h3>
            <form class="row contact_form" action="/address" method="post">
                <div class="col-md-6 form-group p_star">
                    <input type="text" class="form-control" name="name" value="<%= user.address[0].name %>"/>
                  </div>
                  <div class="col-md-6 form-group p_star">
                    <input type="text" class="form-control" name="number" value="<%= user.address[0].number %>"/>
                  </div>
                  <div class="col-md-12 form-group p_star">
                    <input type="text" class="form-control" name="address" value="<%= user.address[0].address %>"/>
                  </div>
                  <div class="col-md-12 form-group p_star">
                    <input type="text" class="form-control" name="country" value="<%= user.address[0].country %>"/>
                  </div>
                  <div class="col-md-12 form-group p_star">
                    <input type="text" class="form-control" name="district" value="<%= user.address[0].district %>"/>
                  </div>
                  <div class="col-md-12 form-group p_star">
                    <input type="text" class="form-control" name="pincode" value="<%= user.address[0].pincode %>"/>
                  </div>                
              <button type="submit" class="btn_3">Edit And Save</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
<%- include('../partials/user-footer')%>
